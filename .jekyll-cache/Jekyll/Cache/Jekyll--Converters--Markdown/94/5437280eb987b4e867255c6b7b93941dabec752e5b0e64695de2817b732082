    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”dataClass” minOccurs=”1” maxOccurs=”unbounded”
type=”mc:dataClassType”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”dataClassType”&gt;<br />
    &lt;xs:complexContent&gt;<br />
      &lt;xs:extension base=”mc:catalogueItem”&gt;<br />
        &lt;xs:sequence&gt;<br />
          &lt;xs:element name=”maxMultiplicity” minOccurs=”0”
type=”mc:multiplicity”&gt;<br />
            &lt;xs:annotation&gt;<br />
              &lt;xs:documentation&gt;If not provided then will default to 1
(required)&lt;/xs:documentation&gt;<br />
            &lt;/xs:annotation&gt;<br />
          &lt;/xs:element&gt;<br />
          &lt;xs:element name=”minMultiplicity” type=”mc:multiplicity”
minOccurs=”0”&gt;<br />
            &lt;xs:annotation&gt;<br />
              &lt;xs:documentation&gt;If not provided then will default to 1
(required)&lt;/xs:documentation&gt;<br />
            &lt;/xs:annotation&gt;<br />
          &lt;/xs:element&gt;<br />
          &lt;xs:element name=”childDataClasses” minOccurs=”0”
type=”mc:dataClassesType”/&gt;<br />
          &lt;xs:element name=”childDataElements” type=”mc:dataElementsType”
minOccurs=”0”/&gt;<br />
        &lt;/xs:sequence&gt;<br />
      &lt;/xs:extension&gt;<br />
    &lt;/xs:complexContent&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”dataElementsType”&gt;<br />
    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”dataElement” maxOccurs=”unbounded”
type=”mc:dataElementType”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”dataElementType”&gt;<br />
    &lt;xs:complexContent&gt;<br />
      &lt;xs:extension base=”mc:catalogueItem”&gt;<br />
        &lt;xs:sequence&gt;<br />
          &lt;xs:element name=”dataType” type=”mc:dataTypeType”&gt;<br />
            &lt;xs:annotation&gt;<br />
              &lt;xs:documentation&gt;If you’ve already provided the full DataType
information in the DataModel list of DataTypes, then you need only provide the
label and domainType here to link to the DataType.</p>

<p>If you have not provided all the information at the DataModel level then a
DataType will be created using the information provided.&lt;/xs:documentation&gt;<br />
            &lt;/xs:annotation&gt;<br />
          &lt;/xs:element&gt;<br />
          &lt;xs:element name=”maxMultiplicity” minOccurs=”0”
type=”mc:multiplicity”&gt;<br />
            &lt;xs:annotation&gt;<br />
              &lt;xs:documentation&gt;If not provided then will default to 1
(required)&lt;/xs:documentation&gt;<br />
            &lt;/xs:annotation&gt;<br />
          &lt;/xs:element&gt;<br />
          &lt;xs:element name=”minMultiplicity” type=”mc:multiplicity”
minOccurs=”0”&gt;<br />
            &lt;xs:annotation&gt;<br />
              &lt;xs:documentation&gt;If not provided then will default to 1
(required)&lt;/xs:documentation&gt;<br />
            &lt;/xs:annotation&gt;<br />
          &lt;/xs:element&gt;<br />
        &lt;/xs:sequence&gt;<br />
      &lt;/xs:extension&gt;<br />
    &lt;/xs:complexContent&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”enumerationValuesType”&gt;<br />
    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”enumerationValue” maxOccurs=”unbounded”
type=”mc:enumerationValueType”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”enumerationValueType”&gt;<br />
    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”id” type=”mc:uuid” minOccurs=”0”/&gt;<br />
      &lt;xs:element name=”index” type=”xs:integer”/&gt;<br />
      &lt;xs:element name=”label” type=”mc:mandatoryString” minOccurs=”0”/&gt;<br />
      &lt;xs:element name=”lastUpdated” type=”xs:dateTime” minOccurs=”0”/&gt;<br />
      &lt;xs:element name=”key” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”value” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”category” type=”xs:string” minOccurs=”0”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”metadataCollectionType”&gt;<br />
    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”metadata” maxOccurs=”unbounded”
type=”mc:metadataType”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”metadataType”&gt;<br />
    &lt;xs:sequence&gt;<br />
      &lt;xs:element name=”id” type=”mc:uuid” minOccurs=”0”/&gt;<br />
      &lt;xs:element name=”namespace” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”key” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”value” type=”xs:string” minOccurs=”1”/&gt;<br />
      &lt;xs:element name=”lastUpdated” type=”xs:dateTime” minOccurs=”0”/&gt;<br />
    &lt;/xs:sequence&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:complexType name=”exporterType”&gt;<br />
    &lt;xs:all&gt;<br />
      &lt;xs:element name=”namespace” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”name” type=”xs:string”/&gt;<br />
      &lt;xs:element name=”version” type=”xs:decimal”/&gt;<br />
    &lt;/xs:all&gt;<br />
  &lt;/xs:complexType&gt;<br />
  &lt;xs:simpleType name=”mandatoryString”&gt;<br />
    &lt;xs:restriction base=”xs:string”&gt;<br />
      &lt;xs:minLength value=”1”/&gt;<br />
    &lt;/xs:restriction&gt;<br />
  &lt;/xs:simpleType&gt;<br />
  &lt;xs:simpleType name=”multiplicity”&gt;<br />
    &lt;xs:restriction base=”xs:integer”&gt;<br />
      &lt;xs:minInclusive value=”-1”/&gt;<br />
    &lt;/xs:restriction&gt;<br />
  &lt;/xs:simpleType&gt;<br />
  &lt;xs:simpleType name=”dataModelTypeEnum”&gt;<br />
    &lt;xs:restriction base=”xs:string”&gt;<br />
      &lt;xs:enumeration value=”Data Asset”/&gt;<br />
      &lt;xs:enumeration value=”Data Standard”/&gt;<br />
    &lt;/xs:restriction&gt;<br />
  &lt;/xs:simpleType&gt;<br />
  &lt;xs:simpleType name=”dataTypeDomainTypeEnum”&gt;<br />
    &lt;xs:restriction base=”xs:string”&gt;<br />
      &lt;xs:enumeration value=”PrimitiveType”/&gt;<br />
      &lt;xs:enumeration value=”ReferenceType”/&gt;<br />
      &lt;xs:enumeration value=”EnumerationType”/&gt;<br />
    &lt;/xs:restriction&gt;<br />
  &lt;/xs:simpleType&gt;<br />
  &lt;xs:simpleType name=”uuid”&gt;<br />
    &lt;xs:restriction base=”xs:string”&gt;<br />
      &lt;xs:pattern
value=”[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-fF0-9]{4}-[a-f0-9]{12}”/&gt;<br />
    &lt;/xs:restriction&gt;<br />
  &lt;/xs:simpleType&gt;<br />
&lt;/xs:schema&gt;</p>

